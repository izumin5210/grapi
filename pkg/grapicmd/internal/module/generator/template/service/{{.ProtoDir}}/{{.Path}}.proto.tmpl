syntax = "proto3";
option go_package = "{{ .PbGo.PackagePath }}";
package {{ .Proto.Package }};
{{range .Proto.Imports}}
import "{{.}}";
{{- end}}

service {{ .ServiceName }}Service {	
{{- range .Methods}}
  rpc {{.Method}} ({{.RequestProto}}) returns ({{.ResponseProto}}) {
    option (google.api.http) = {
      {{.HTTP.Method}}: "/{{.HTTP.Path}}"
      {{- if .HTTP.Body}}
      body: "{{.HTTP.Body}}"
      {{- end}}
    };
  }
{{- end}}
}
{{range .Proto.Messages}}
message {{.Name}} {
  {{- range .Fields}}
  {{- if .Repeated}}
  repeated {{.Type}} {{.Name}} = {{.Tag}};
  {{- else}}
  {{.Type}} {{.Name}} = {{.Tag}};
  {{- end}}
  {{- end}}
}
{{end -}}
